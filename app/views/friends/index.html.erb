<h1>Friends</h1>

<div id="friends">
<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <!--<%= render friend %>-->
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        
        <td> <%= link_to "Show", friend,class:"btn btn-primary" %></td>  
        <td> <%= link_to "Edit", edit_friend_path(friend),class:"btn btn-secondary" %></td>    
        <td> <%= button_to "Delete",friend, method: :delete, data:{confirm:"Are you sure?"},class:"btn btn-danger" %></td>   
      </tr>
    <% end %>
    </tbody>
  <table>
  
</div>

<%= link_to "New friend", new_friend_path,class:"btn btn-secondary" %>
