<p style="color: green"><%= notice %></p>

<div class="card text-dark bg-light mb-4" style="max-width: 30rem;">
  <div class="card-header"><%= @friend.first_name %></div>
    <div class="card-body">
      <div class="container">

        <div class="row">

          <div class="col">
            <strong>Name </strong>
          </div>
          <div class="col">
            <%= @friend.first_name %> <%= @friend.last_name %>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <strong>Email </strong>
          </div>
          <div class="col">
            <%= @friend.email %> 
          </div>
        </div>

        <div class="row">
          <div class="col">
            <strong>Phone </strong>
          </div>
          <div class="col">
            <%= @friend.phone %>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <strong>Twitter </strong>
          </div>
          <div class="col">
            <%= @friend.twitter %>
          </div>
        </div>

        
      </div>
  
    </div>
</div>
<div>
 <div class="row" style="max-width: 16rem;">
  <div class="col">
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
  </div>
  <div class="col">
    <%= button_to "Delete", @friend, method: :delete,class:"btn btn-secondary" %>
  </div>
  <div class="col">
    <%= link_to "Back", friends_path,class:"btn btn-secondary" %>
  </div>
</div> 
